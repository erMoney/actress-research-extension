{
    "manifest_version": 2,
    "name": "erMoney extension",
    "version": "1.0.0",
    "description": "erMoney extension for Google Chrome",
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["scripts/contentScripts.js"]
        }
    ],
    "background": {
        "scripts": [
            "scripts/backgroundScripts.js",
            "scripts/lib/hot-reload.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "erMoney",
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "http://*/*",
        "https://*/*",
        "chrome://favicon/",
        "contextMenus"
    ]
}
