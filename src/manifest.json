{
    "manifest_version": 2,
    "name": "Actress Research extension",
    "version": "0.1.0",
    "description": "erMoney extensions for Google Chrome",
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["scripts/contentScripts.js"]
        }
    ],
    "content_security_policy":"script-src 'self' https://code.getmdl.io/1.3.0/material.min.js; object-src 'self'",
    "background": {
        "scripts": [
            "scripts/backgroundScripts.js",
            "scripts/lib/hot-reload.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "erMoney",
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "http://*/*",
        "https://*/*",
        "chrome://favicon/",
        "contextMenus"
    ]
}
