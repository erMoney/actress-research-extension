{
    "manifest_version": 2,
    "name": "Actress Search extension",
    "version": "0.1.0",
    "description": "erMoney extensions for Google Chrome",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "scripts/contentScripts.js"
            ]
        }
    ],
    "content_security_policy":"script-src 'self' 'unsafe-eval' https://code.getmdl.io/1.3.0/material.min.js; object-src 'self'",
    "background": {
        "scripts": [
            "scripts/backgroundScripts.js",
            "scripts/lib/hot-reload.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/16.png"
        },
        "default_title": "erMoney",
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "http://*/*",
        "https://*/*",
        "chrome://favicon/",
        "contextMenus"
    ]
}
